{
  "extends": ["@movie-platform/eslint-config/base"],
  "root": true,
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "import/no-unresolved": "off",
    "import/namespace": "off",
    "import/no-duplicates": "off",
    "import/order": "off",
    "import/default": "off",
    "import/no-named-as-default": "off",
    "import/no-named-as-default-member": "off",
    "import/export": "off"
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.d.ts"
  ]
}
