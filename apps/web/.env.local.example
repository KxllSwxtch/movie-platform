# MoviePlatform Web Application Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL (required)
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1

# Public app URL for metadata and redirects
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Authentication
# =============================================================================

# JWT secret for token validation (should match API)
# JWT_SECRET=your-super-secret-jwt-key-here

# =============================================================================
# External Services
# =============================================================================

# Bunny CDN for video streaming
# NEXT_PUBLIC_BUNNY_CDN_HOSTNAME=your-pullzone.b-cdn.net
# NEXT_PUBLIC_BUNNY_STREAM_LIBRARY_ID=your-library-id

# =============================================================================
# Analytics & Monitoring (optional)
# =============================================================================

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics ID
# NEXT_PUBLIC_GA_ID=

# =============================================================================
# Feature Flags (optional)
# =============================================================================

# Enable React Query DevTools in production
# NEXT_PUBLIC_ENABLE_DEVTOOLS=false
